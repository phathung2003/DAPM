<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - QLMB</title>
    <!--CSS(s)-->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <p>@Session["RoleCode"]</p>
    <!--Navbar start-->
    <nav class="navbar navbar-expand-lg bg-opacity-75 p-0">
        <div class="container-fluid text-uppercase pt-3 pb-3">
            <div class="d-inline-block">
                <img src="~/Resources/Picture/Logo/Logo_LightMode.png"
                     alt="Logo"
                     height="80"
                     class="align-content-center">
                @Html.ActionLink("Trang chủ", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Sự kiện</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Ưu đãi</a>
                    </li>
                </ul>

                @*Hiện xin chảo | Đăng nhập*@
                <div class="d-flex">
                    @if (Session["AccountName"] != null)
                    {
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Xin chào, @Session["AccountName"].ToString() !
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">Thông tin</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>@Html.ActionLink("Đăng xuất", "Logout", "Login", null, new { @class = "dropdown-item" })</li>
                                </ul>
                            </li>
                        </ul>
                    }
                    else
                    {
                        @Html.ActionLink("Đăng nhập", "LoginPage", "Login", null, new { @class = "nav-link" })
                    }
                </div>

            </div>
        </div>
    </nav>
    <!--Navbar end-->
    <main class="main">
        @RenderBody()
    </main>

    <!--Footer start-->
    <hr />
    <footer class="py-4 flex-shrink-0">
        <div class="container py-4">
            <div class="row gy-4 gx-6">
                <div class="col-lg-4">
                    <p class="small text-muted">Trung tâm thương mại Gà Tây Ninh</p>

                    <!-- Icon Nhà -->
                    <p class="small text-muted">
                        <i class="fa fa-home">  Địa chỉ: 654/32 Lạc Long Quân, Phường 9, Quận Tân Bình Tân Bình</i>
                    </p>

                    <!-- Icon Điện thoại-->
                    <p class="small text-muted">
                        <i class="fa fa-phone"> Tổng đài liên hệ: 036.435.1086</i>
                    </p>

                    <!-- Icon Email -->
                    <p class="small text-muted">
                        <!-- Icon Email -->
                        <i class="fa fa-envelope"> Email: 21dh113722@st.huflit.edu.vn</i>
                    </p>

                    <p class="small text-muted">Copyright &copy; Nguyen Phat Hung</p>
                </div>

                <div class="col-lg-2 col-md-6">
                </div>

                <div class="col-lg-2 col-md-6">
                </div>

                <div class="col-lg-4 col-md-6">
                    <p class="small text-muted">Với sự trợ giúp của</p>
                    <ul style="list-style: none;">
                        <li>
                            <p class="small text-muted">Nguyễn Minh Trí ( Trí Lỏ :D ) - Cố vấn, Fix bug</p>
                            <p class="small text-muted">Lê Trần Thanh Thanh - Frontend Support</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>







        <!--Footer end-->
        <!--Script(s)-->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script src="~/Scripts/bootstrap.bundle.min.js"></script>
        @RenderSection("scripts", required: false)
</body>
</html>